@model List<SalaryReportViewModel>

<link href="~/lib/datatables/css/dataTables.bootstrap4.css" />
<link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />

<div class="container">
    <h3>Employee</h3>
    <hr />

    <table id="salaryReport" class="table table-striped table-bordered zero-configuration dt-responsive nowrap text-center" style="color: black; margin-top: 15px">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>Attendance Days</th>
                <th>Absent Days</th>
                @*<th>Over Time Hours</th>                    
                <th>Discount Hours</th>*@
                <th>Extra</th>
                <th>Discount</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @for(int i = 0; i< Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].EmployeeName</td>
                    <td>@Model[i].phone</td>
                    <td>@Model[i].salary</td>
                    <td>@Model[i].attendanceDays</td>
                    <td>@Model[i].absentDays</td>
                    @*<td>@Model[i].overTimeHours</td>
                    <td>@Model[i].discountHours</td>*@
                    <td>@Model[i].extra</td>
                    <td>@Model[i].discount</td>
                    <td>@Model[i].total</td>
                    <td>
                        <div class="d-flex ">
                        <a class="btn btn-primary mr-1">+ Invoice</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script>
        $(document).ready(function() {
            $("#salaryReport").dataTable();
        })
    </script>
    

    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
  
}


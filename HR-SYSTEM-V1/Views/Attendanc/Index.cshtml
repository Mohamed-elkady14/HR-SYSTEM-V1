@model List<Attendance>

@{

    //SelectList employee = new SelectList(ViewBag.employees, "Emp_Id", "Name");
    Attendance attendance = new Attendance();
}


<link href="~/lib/datatables/css/dataTables.bootstrap4.css" />

<div class="container">
    <h3>Employee</h3>
    <hr />

    <table id="employees" class="table table-striped table-bordered dt-responsive nowrap" style="color: black; margin-top: 15px">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Attendance Date</th>
                <th>Check out date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.employee.Name</td>
                    <td>@item.Day_Date.ToString("yyyy-MM-dd")</td>
                    <td>@item.StartTimeWork?.ToString("hh:mm:ss tt")</td>
                    <td>@item.EndTimeWork?.ToString("hh:mm:ss tt")</td>
                    <td>
                        <a class="btn btn-warning"  asp-action="edit" asp-controller="Attendanc" asp-route-id="@item.Attend_Id">Edit</a>
                        <a class="btn btn-danger"   asp-action="delete" asp-controller="Attendanc" asp-route-id="@item.Attend_Id">X</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <br />

<partial name="newAttendance" model="@attendance"/>
</div>


@section Scripts{
    <script>
        $(document).ready(function() {
            $("#employees").dataTable()
        })
    </script>
    

    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
  
}